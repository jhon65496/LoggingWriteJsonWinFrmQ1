<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<targets>
		<target name="file" xsi:type="File" fileName="JsonLayoutArray01.json">
			<!-- Добавляем layout для вывода необходимых параметров -->
			<layout xsi:type="JsonLayoutArray">
				<item type='time' text='${longdate}' />
				<item type='message' text='${message}' />
			</layout>
		</target>
	</targets>

	<rules>
		<logger name="*" minlevel="Info" writeTo="file" />
	</rules>
</nlog>